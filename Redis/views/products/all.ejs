<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products</title>
    <link rel="stylesheet" href="css/products.css">
    <style>

    </style>
</head>

<body>
    <div class="container">

        <% products.forEach((product,element)=>{ %>
            <h3 onclick="clickedProduct(`<%= JSON.stringify(product) %>`)">
                <%= product.name %>
            </h3>
            <h3>
                <%= product.price %>
            </h3>
            <h3>
                <%= product.category %>
            </h3>
       

                <img width="50%" height="100%" src="<%=product.images_url%>" alt="<%= product.name %>"> 
 
                  <a  href="products/<%= product._id %>"> Add to Cart</a>
                    <% }) %>
                </div>

</body>

</html>
<script src="js/products.js">

</script>